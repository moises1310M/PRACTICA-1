@model PRACTICA_1.Models.Pago
@{
    ViewData["Title"] = "Formulario de Pago";
}
<h2>@ViewData["Title"]</h2>

<div class="container">

        <div class="row">
            <div class="col-md-4">
            <form asp-action="Calcular">
                  <div class="form-groupmy-4">
                    <label for="">Ingrese numero Tarjeta: </label>
                    <input asp-for="numTarjeta" class="form-control" />
                </div>
                <div class="form-groupmy-4">
                    <label for="">Ingrese Fecha de Vencimiento: </label>
                    <input asp-for="FechaVencimiento" class="form-control" />
                </div>
                <div class="form-groupmy-4">
                    <label for="">Ingrese monto a Pagar: </label>
                    <input asp-for="montoPagar" class="form-control" />
                </div>
                <div class="form-groupmy-4">
                    <label for="">Dias Atrasados: </label>
                    <input asp-for="diasAtrasados" class="form-control" />
                </div>
                <div class="form-group my-4">
                    <input type="submit" value="Calcular Pago" class="btn btn-primary" />
                </div>
            </form>
            </div>
        </div>
</div>

<h3>@ViewData["Message"]</h3>